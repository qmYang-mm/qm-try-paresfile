<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quanmin.paresfile.modules.demo.mapper.UserInfoMapper">

    <select id="getUserInfoStatusList" resultType="com.quanmin.paresfile.modules.demo.entity.UserInfo">
        SELECT
            bui.info_id,
            info_detail,
            info_status,
            bu.user_id,
            user_name,
            user_remark,
            user_copy_id
        FROM
            b_user_info bui
            LEFT JOIN b_user bu ON bui.info_id = bu.user_id
    </select>
</mapper>